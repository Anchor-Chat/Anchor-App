{
	"appId": "io.github.decentracord.decentracord-app",
	"productName": "Decentracord",
	"directories": {
		"output": "build",
		"buildResources": "resources"
	},
	"files": ["resources", "src/*"],
	"mac": {
		"category": "public.app-category.social-networking",
		"target": ["dmg", "7z"]
	},
	"win": {
		"target": ["nsis", "portable", "7z"]
	},
	"linux": {
		"target": ["AppImage", "snap", "7z"]
	},
	"publish": {
		"provider": "github"
	}
}